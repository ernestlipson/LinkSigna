rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow authenticated users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.authUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authUid;
    }
    
    // Sessions collection - allow authenticated users to read/write their own sessions
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.studentId || request.auth.uid == resource.data.interpreterId);
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.studentId || request.auth.uid == request.resource.data.interpreterId);
    }
    
    // Interpreters collection - allow authenticated users to read interpreter profiles
    match /interpreters/{interpreterId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.authUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authUid;
    }
  }
}
